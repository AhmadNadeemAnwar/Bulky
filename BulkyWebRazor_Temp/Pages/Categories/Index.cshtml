@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<h1>Category List</h1>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Edit/Delete
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(x=>x.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/Edit"
                           class="btn btn-secondary mb-3 mx-2"
                           asp-route-id="@obj.Id">
                                Edit
                            </a>
                            <a asp-page="/categories/Delete"
                           class="btn btn-danger mb-3 mx-2"
                           asp-route-id="@obj.Id">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>